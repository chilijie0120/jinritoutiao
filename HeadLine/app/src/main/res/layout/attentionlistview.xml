<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/attention_list_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        />
       <TextView
           android:id="@+id/attention_list_tv1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/attention_list_iv"
           android:layout_alignTop="@id/attention_list_iv"
           android:textSize="20sp"
           android:layout_marginLeft="30dp"
           />
        <TextView
            android:id="@+id/attention_list_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/attention_list_iv"
            android:layout_alignBottom="@id/attention_list_iv"
            android:layout_marginLeft="30dp"
            android:textSize="10sp"
            />
</RelativeLayout>