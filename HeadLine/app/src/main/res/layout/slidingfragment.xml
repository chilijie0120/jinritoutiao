<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    >
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="#F4F4F5"
        android:gravity="center_vertical"
        >
    <ImageView
        android:id="@+id/shouji"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:src="@mipmap/shouji"
        />
        <ImageView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/qq"
            />
        <ImageView
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/weibo"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="#F4F4F5"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/touxiang"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/shouji"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/qq_zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:text="喔喔"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/siliding_group"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/lixian"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#C0C0C0"
            android:background="#ffffff"
            android:drawableTop="@mipmap/lixian"
            android:text="版本更新"
            />
        <Button
            android:id="@+id/riye"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ri"
            android:gravity="center_horizontal"
            android:text="日/夜间"
            android:textSize="15sp"
            android:textColor="#C0C0C0"
            android:background="#ffffff"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/siliding_tui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_above="@+id/siliding_group"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ff0000"
        />
    <ListView
        android:id="@+id/siliding_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_above="@+id/siliding_tui"
        >

    </ListView>
</RelativeLayout>